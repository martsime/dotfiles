[colors]
; These define the main colors scheme (at the moment using colors from Gruvbox)

background = #282828
background-alt = #1d2021
foreground = #dfdfdf
foreground-alt = #555
primary = #d79921
secondary = #98971a
alert = #cc241d

green = ${self.secondary}
yellow = ${self.primary}
red = ${self.alert}
blue = #458588

invisible = #ffffffff

[bar/main]
monitor = DP-0

background = ${colors.background}
foreground = ${colors.foreground}
line-color = ${self.background}

; Fonts
font-0 = FuraCode\ Nerd\ Font:pixelsize=10;1

; HiDPI support
dpi = 96

; System tray
tray-maxsize = 16
tray-position = right
tray-padding = 0
tray-background = ${colors.foreground-alt}
tray-transparent = true

; No rounded corner
radius = 0
fixed-center = false

bottom = false
height = 32
width = 100%

line-size = 3
spacing = 0
padding-right = 1
module-margin-left = 1
modules-left = i3
modules-right = filesystem cpu memory temperature audio xkeyboard bluetooth wireless-network date time 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
# format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}
label = %percentage:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-padding = 1
# format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}
label = %percentage_used%%

[module/filesystem]
type = internal/fs
mount-0 = /
# mount-1 = /home

interval = 30

fixed-valued = true

format-mounted = <label-mounted>
label-mounted = %mountpoint%%{F-}: %free%
format-mounted-underline = ${colors.green}

[module/audio]
type = internal/pulseaudio

