# ----------------- ALIASES -----------------

# Exa instead of ls
alias ls="exa"

# Teminal
alias la="ls -la"
alias ll="ls -l"

# Zsh
alias zshconf="vim ~/.config/zsh/.zshrc"
alias sz="source ~/.config/zsh/.zshrc"

# Vim
alias vim="nvim"
alias vimconf="vim ~/.config/nvim/init.vim"

# Tmux
alias tma="tmux a -t"
alias tmn="tmux new -s"
alias tml="tmux ls"
alias tmk="tmux kill-session -t"
